{
  "name": "asii-medical",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test:unit",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "env:check": "turbo run env:check",
    "clean": "turbo run clean && rm -rf node_modules .turbo apps/**/node_modules packages/**/node_modules",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "supabase:reset": "supabase db reset",
    "dev:up": "pnpm -w supabase:start && docker compose -f infra/compose/docker-compose.dev.yml up --build",
    "dev:down": "docker compose -f infra/compose/docker-compose.dev.yml down",
    "dev:logs": "docker compose -f infra/compose/docker-compose.dev.yml logs -f",
    "dev:reset": "docker compose -f infra/compose/docker-compose.dev.yml down -v && rm -rf infra/data/meili",
    "infra:up": "docker compose -f infra/docker-compose.yml up -d",
    "infra:down": "docker compose -f infra/docker-compose.yml down",
    "deploy:build": "docker compose -f infra/compose.prod.yml build",
    "deploy:up": "docker compose -f infra/compose.prod.yml up -d"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2",
    "turbo": "^1.13.4",
    "typescript": "^5.4.5"
  }
}
